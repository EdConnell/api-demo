<div class="container">
  <% if authenticated? %>
    <% if has_game_in_session? %>
      <p>Want to finish your last game?</p>
      <a href="/play/<%= last_game_id %>"></a>
    <% end %>
    <p>Are you ready to play?</p>
    <a href="/play">New Game</a>
  <% else %>
    <p>Please log in to play!</p>
  <% end %>
</div>
